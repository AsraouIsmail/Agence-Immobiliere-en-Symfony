 {{ form_start(form) }}
<div class="row">
    <div class="col-md-5">{{ form_row(form.title) }}</div>
     <div class="col-md-5">{{ form_row(form.description) }}</div>
    <div class="col-md-3">{{ form_row(form.surface) }}</div>
    <div class="col-md-3">{{ form_row(form.price) }}</div>
</div>
<div class="row">
    <div class="col-md-3">{{ form_row(form.rooms) }}</div>
    <div class="col-md-3">{{ form_row(form.bedrooms) }}</div>
    <div class="col-md-2">{{ form_row(form.heat) }}</div>
    <div class="col-md-2">{{ form_row(form.floor) }}</div>
    <div class="col-md-5">{{ form_row(form.address) }}</div>
    <div class="col-md-2">{{ form_row(form.city) }}</div>
    <div class="col-md-3">{{ form_row(form.postalCode) }}</div>
    <div class="col-md-3">{{ form_row(form.country) }}</div>
</div>
    <div class="row">
    <div class="col-md-2">{{ form_row(form.sold) }}</div>
    <div class="col-md-2">{{ form_row(form.parking) }}</div>
    <div class="col-md-2">{{ form_row(form.type) }}</div>
    <div class="col-md-2">{{ form_row(form.status) }}</div>
</div>
{{ form_widget(form) }}
<button class="btn btn-primary">{{ button }}</button>
{{ form_end(form) }}


