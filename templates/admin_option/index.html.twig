
{% block body %}
    <h1>Nos Options:</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for option in options %}
            <tr>
                <td>{{ option.name }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_admin_option_show', {'id': option.id}) }}">show</a>
                    <a class="btn btn-warning" href="{{ path('app_admin_option_edit', {'id': option.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_admin_option_new') }}">Creer une nouvelle option</a>
{% endblock %}

